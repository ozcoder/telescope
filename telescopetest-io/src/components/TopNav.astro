---
const currentPath = Astro.url.pathname;

const navItems = [
  { label: 'Home', href: '/' },
  { label: 'Upload', href: '/upload' },
];
---

<header class="top-nav">
  <div class="left">
    <a class="brand" href="/">Telescope</a>
    <nav>
      <ul>
        {
          navItems.map(item => (
            <li>
              <a
                class={currentPath === item.href ? 'active' : ''}
                href={item.href}
              >
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
  <div class="actions">
    <button class="theme-toggle" type="button" aria-label="Toggle dark mode">
      üåô
    </button>
    <a
      class="gh"
      href="https://github.com/cloudflare/telescope"
      target="_blank"
      rel="noreferrer"
    >
      GitHub ‚Üó
    </a>
  </div>
</header>

<style>
  header {
    width: max(500px, calc(100% - 68px));
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 30px;
    margin: 20px;
    padding: 0 20px;
    position: sticky;
    top: 0;
    z-index: 10;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border-radius: 8px;
  }

  :global([data-theme='dark']) header {
    background: rgba(15, 15, 15, 0.9);
  }

  .left {
    display: flex;
    align-items: center;
    gap: 14px;
  }

  .brand {
    font-weight: 700;
    letter-spacing: -0.02em;
    color: var(--text);
    text-decoration: none;
    padding: 8px 10px;
    border-radius: 12px;
  }

  nav ul {
    display: flex;
    align-items: center;
    gap: 6px;
    flex-wrap: wrap;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  nav a {
    color: var(--muted);
    text-decoration: none;
    padding: 8px 10px;
    border-radius: 12px;
    border: 1px solid transparent;
    font-size: 14px;
  }

  nav a:hover {
    border-color: var(--border);
    background: var(--panel);
    color: var(--text);
  }

  nav a.active {
    color: var(--text);
    border-color: var(--brand-hover);
    background: linear-gradient(135deg, var(--brand-bg), var(--brand-bg-alt));
  }

  .actions {
    display: flex;
    align-items: center;
    gap: 14px;
  }

  .theme-toggle {
    background: transparent;
    border: 1px solid var(--border);
    color: var(--text);
    cursor: pointer;
    padding: 6px 10px;
    border-radius: 12px;
    font-size: 16px;
    line-height: 1;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .theme-toggle:hover {
    background: var(--panel);
    border-color: var(--brand-hover);
  }

  .gh {
    color: var(--muted);
    text-decoration: none;
    padding: 8px 10px;
    border-radius: 12px;
    border: 1px solid var(--border);
    font-size: 14px;
    white-space: nowrap;
  }

  .gh:hover {
    color: var(--text);
    border-color: var(--brand-hover);
  }
</style>

<script>
  const savedTheme = localStorage.getItem('theme');
  const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
  const theme = savedTheme || (prefersDark ? 'dark' : 'light');
  document.documentElement.setAttribute('data-theme', theme);
  const button = document.querySelector('.theme-toggle') as HTMLButtonElement;
  if (button) {
    button.textContent = theme === 'dark' ? '‚òÄÔ∏è' : 'üåô';
    button.addEventListener('click', () => {
      const current = document.documentElement.getAttribute('data-theme');
      const newTheme = current === 'dark' ? 'light' : 'dark';
      document.documentElement.setAttribute('data-theme', newTheme);
      localStorage.setItem('theme', newTheme);
      button.textContent = newTheme === 'dark' ? '‚òÄÔ∏è' : 'üåô';
    });
  }
</script>
